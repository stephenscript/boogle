{
    "manifest_version": 3,
    "name": "Boogle",
    "description": "Improve search results on Google",
    "version": "1.0.0",
    "action": {
        "default_popup": "splash.html",
        "default_icon": "icon128.png"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.google.com/*"
            ],
            "js": ["dist/enhanceSearchResults.js"],
            "run_at": "document_start"
        }
    ]
}
